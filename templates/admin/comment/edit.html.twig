{% extends 'admin/base.html.twig' %}

{% block title %}Modifications des Commentaires{% endblock %}

{% block body %}

<div class="container">
<h1>Modification de commentaire</h1>
   <div class="alert alert-info">
   <strong>Comment liée :</strong>{{comment.ad.title}}<br>
   <strong>Auteur:</strong>{{comment.author.firstName}}<br>
   <strong>Date de creation :</strong>{{comment.createdAt | date('d/m/Y H:i')}}<br>
   <strong>Note donnée :</strong>{{comment.ad.getAvgRatings() | number_format(2,',',' ')}}
   </div>

  {{form_start(form)}}

   {{form_widget(form)}}

<button type="submit" class="btn btn-success">Enregistrer les modifications</button>
  {{form_end(form)}}
  </div>
{% endblock %}
