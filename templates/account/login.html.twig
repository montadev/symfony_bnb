{% extends 'base.html.twig' %}

{% block title %}connexion au site{% endblock %}

{% block body %}

 <div class="container">

  <div class="row">

  <div class="col-md-3">&nbsp;</div>

  <div class="col-md-6">
   <div class="bg-light py-3 px-3">
   <h1>Connectez Vous !</h1>

     {% if hasError %}
        <div class="alert alert-danger">
          E-mail ou Mot de passe Incorrecte
        </div>
     {% endif %}
       
       <form method="post" action="{{path('account_login')}}">
        
            <div class="form-group">
            <label for="email">Email</label>
    <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email..."

     value="{{username}}"    
>
            </div>

            <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe...">
            </div>

            <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
            </div>
        
        </form>
        </div>
  </div>
  
  </div>

        

   </div>
{% endblock %}
